<% content_for :header_actions do %>
  <%= link_to "New List", new_todo_list_path, class: "add" %>
<% end %>

<ul id="lists">
  <% @todo_lists.each do |list| %>
  	<li class="">	
      <%= link_to list do %>
       	<h2><%= list.name %></h2>
       	<p><%= list.todo_items_completed %>/<%= list.todo_items_count %></p>
      <% end %>
    </li>
  <% end %>
</ul>
